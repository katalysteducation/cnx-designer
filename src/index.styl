@require 'mixins'
@require 'editor'


*
    box-sizing: border-box


body
    margin: 0
    padding: 0

    font-family: Noto Sans, sans
    font-size: 13px


div#root
    display: flex
    flex-direction: column

    position: fixed
    left: 0
    top: 0
    right: 0
    bottom: 0


div#modal-root > div
    // Position modals
    position fixed
    left: 0
    top: 0
    right: 0
    bottom: 0
    z-index: 1000

    // and dim rest of the page
    background-color: alpha(#000, 0.1)

    // To let items align themselves.
    display: flex
