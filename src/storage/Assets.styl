div.assets
    height: 100%
    width: 100%
    max-width: 320px

    float: right

    box-shadow: 0 8px 16px 8px alpha(#333, 0.4)

    background-color: #fafafa

    > div.content
        // Prevent container from overflowing screen
        max-height: 100%
        overflow-y: auto

    div.asset
        margin: 8px
        max-height: 160px

        &:hover
            cursor: pointer
            box-shadow: 0 2px 4px 2px alpha(#333, 0.4)

        span.name
            display: block

    div.image
        position: relative

        img
            display: block
            max-width: 100%
            min-width: 100%
            max-height: 100%
            min-height: 100%
            height: -webkit-fill-available
            height: -moz-available
            object-fit: cover

        span
            position: absolute
            left: 0
            right: 0
            bottom: 0

            padding: 8px 16px
            background-color: alpha(#fff, 0.8)

    div.unknown
        padding: 8px 16px

        span.mime
            color: rgba(#000, 0.54)
