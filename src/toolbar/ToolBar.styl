div.toolbar
    z-index: 4

    display: flex
    position: fixed
    align-items: center

    height: 36px
    width: 100%
    padding-left: 16px
    padding-right: 16px

    background-color #fafafa
    box-shadow: 0 2px 4px 2px alpha(#333, 0.4)

    > div.group
        display: inline-flex
        flex-direction: row

        line-height: 1
        vertical-align: top

        padding: 0
        margin: 2px 6px 2px 0px

        &:not(:first-child)
            margin-left: 0px

            &::before
                content: '\200b'
                border-left: 1px solid rgba(#000, 0.12)
                margin: 2px 6px 2px 0px

    button
        width: 32px
        height: 32px
        padding: 6px
        margin: 0

        border-radius 50%
        background-color: #fafafa
        border: none

        text-align: center

        &:hover:not(:disabled)
            cursor: pointer
            background-color alpha(#999, 0.4)

        &:disabled
        &[data-active="false"]
            color: rgba(#000, 0.38)

        i.material-icons
            font-size: 20px
