div.menubar
    height: 24px
    line-height: 24px
    padding-left: 8px
    padding-right: 8px

    > div.topmenu
        display: inline-block

        > span
            display: inline-block
            padding-left: 16px
            padding-right: 16px
            user-select: none

            &:hover
                cursor: pointer
                background-color: rgba(#000, 0.1)

        > div.menu
            position: absolute

    > div.overlay
        z-index: -1
        position: fixed
        left: 0
        top: 0
        right: 0
        bottom: 0

    &:not(.open) > div.overlay
        display: none

div.menu
    z-index: 8

    width: 5 * 64px
    padding: 8px 0 8px 0

    background-color #fafafa
    box-shadow: 0 4px 8px 4px alpha(#333, 0.4)
    border-radius: 2px

    &:not(.open)
        display: none

    div.item
        height: 24px
        line-height: 24px
        padding: 0 24px 0 24px

        display: flex
        flex-direction: row

        user-select: none

        &[data-disabled="true"]
            color: rgba(#000, 0.38)

        &:not([data-disabled]):hover
            cursor: pointer
            background-color: rgba(#000, 0.1)

        > .title
            flex: 1

    div.group:not(:first-child)::before
        display: block
        content: ' '
        margin-top: 11px
        padding-top: 12px
        border-top: 1px solid rgba(#000, 0.12)
